<resources>

    <style name="Theme.MaterialHunter" parent="Theme.Material3.Dark.NoActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorSurface</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/Widget.App.DrawerArrowStyle</item>
        <item name="fontFamily">@font/google_sans</item>
        <item name="snackbarStyle">@style/Widget.Mirivan.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Mirivan.Snackbar.TextView</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedNewButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxHeight">53dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">38dp</item>
        <item name="android:minHeight">38dp</item>
    </style>

    <style name="Widget.Mirivan.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="Widget.Mirivan.NewsCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="Widget.Mirivan.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="Widget.Mirivan.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="Widget.Mirivan.Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Mirivan.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="titleTextAppearance">@style/Widget.Mirivan.Title</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextAppearance">@style/Widget.Mirivan.Subtitle</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:layout_height">?android:actionBarSize</item>
    </style>

    <style name="Widget.Mirivan.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Mirivan.Subtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.App.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/menu_item</item>
        <item name="itemTextColor">@color/menu_item</item>
        <item name="itemShapeFillColor">@color/menu_item_shape</item>
    </style>

</resources>