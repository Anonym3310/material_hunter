<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pineapple_description"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pineapple_gateway" />

    <EditText
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/pineapple_gatewayip"
        android:digits="0123456789."
        android:text="@string/pineapple_gatewayip"
        android:maxLines="1"
        android:maxLength="15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pineapple_port" />

    <EditText
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/pineapple_webport"
        android:text="@string/pineapple_webport"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pineapple_ip" />

    <EditText
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/pineapple_clientip"
        android:digits="0123456789./"
        android:text="@string/pineapple_clientip"
        android:maxLines="1"
        android:maxLength="21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pineapple_cidr" />

    <EditText
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/pineapple_cidr"
        android:digits="0123456789./"
        android:text="@string/pineapple_subnet"
        android:maxLines="1"
        android:maxLength="21" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pineapple_noupstream"
            android:id="@+id/pineapple_noup" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pineapple_transproxy"
            android:id="@+id/pineapple_transproxy" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pineapple_start_OTG"
            android:singleLine="true"
            android:id="@+id/pineapple_start_button" />

        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pineapple_stop_OTG"
            android:singleLine="true"
            android:id="@+id/pineapple_close_button" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>