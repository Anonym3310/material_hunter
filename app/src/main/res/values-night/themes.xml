<resources>

    <style name="Theme.MaterialHunter" parent="Theme.Material3.Dark.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/Widget.Mirivan.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Mirivan.Snackbar.TextView</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <style name="ThemeM3.MaterialHunter" parent="Theme.Material3.DynamicColors.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/Widget.Mirivan.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Mirivan.Snackbar.TextView</item>
        <item name="switchStyle">@style/Widget.Mirivan.Material3.CompoundButton.Switch</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">42dp</item>
        <item name="android:minHeight">42dp</item>
    </style>

    <style name="Widget.Mirivan.NewsCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="Widget.Mirivan.ShellOutputTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Widget.Mirivan.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="Widget.Mirivan.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="Widget.Mirivan.Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Mirivan.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="titleTextAppearance">@style/Widget.Mirivan.Title</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextAppearance">@style/Widget.Mirivan.Subtitle</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">?android:actionBarSize</item>
    </style>

    <style name="Widget.Mirivan.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Mirivan.Subtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Mirivan.Material3.CompoundButton.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_material3</item>
        <item name="thumbTint">@color/switch_thumb_tint_material3</item>
        <item name="thumbTintMode">src_in</item>
        <item name="track">@drawable/switch_track_material3</item>
        <item name="trackTint">@color/switch_track_tint_material3</item>
    </style>

</resources>