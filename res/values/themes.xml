<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MaterialHunter" parent="Theme.MaterialComponents.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBars</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- material features -->
        <item name="fontFamily">@font/google_sans</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedNewButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxHeight">53dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">38dp</item>
        <item name="android:minHeight">37dp</item>
    </style>

    <style name="Widget.Mirivan.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="cardBackgroundColor">#121212</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="Widget.Mirivan.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface" />
    <style name="Widget.Mirivan.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/Widget.Mirivan.Title</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextAppearance">@style/Widget.Mirivan.Subtitle</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:layout_height">?android:actionBarSize</item>
    </style>
    <style name="Widget.Mirivan.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Mirivan.Subtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>